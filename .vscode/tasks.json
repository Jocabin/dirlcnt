{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build dbg dirlcnt",
            "command": "/opt/homebrew/opt/llvm@13/bin/clang-13",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}/main.c",
                "-o",
                "${workspaceFolder}/dirlcnt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compilateur : /opt/homebrew/opt/llvm@13/bin/clang-13"
        },
        {
            "type": "cppbuild",
            "label": "Build dirlcnt",
            "command": "/opt/homebrew/opt/llvm@13/bin/clang-13",
            "args": [
                "${workspaceFolder}/main.c",
                "-o",
                "${workspaceFolder}/dirlcnt",
                "-std=c99",
                "-Ofast"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}